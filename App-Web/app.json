{
  "expo": {
    "name": "App-Web",
    "slug": "App-Web",
    "version": "1.0.0",
    "orientation": "portrait",

    "icon": "./assets/images/icon.png",
    "scheme": "appweb",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "La app necesita acceder a la c치mara para escanear c칩digos QR.",
        "NSLocationWhenInUseUsageDescription": "La app necesita tu ubicaci칩n para detectar el ingreso al museo."
      }
    },

    "android": {
      "package": "com.anonymous.museoapp",
      "googleServicesFile": "./android/app/google-services.json",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,

      "permissions": [
        "android.permission.CAMERA",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION"
      ]
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": { "backgroundColor": "#000000" }
        }
      ],

      // 游릴 NOTIFICACIONES PUSH
      [
        "expo-notifications",
        {
          "icon": "./assets/images/android-icon-monochrome.png",
          "color": "#FFFFFF",
          "androidCollapsedTitle": "Museo"
        }
      ],

      "expo-font"
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },

    "extra": {
      "router": {},

      // 游릴 NECESARIO PARA EXPO PUSH TOKEN
      "eas": {
        "projectId": "b889ed98-7c50-409e-bbf2-a8d6f3760be7"
      }
    }
  }
}
